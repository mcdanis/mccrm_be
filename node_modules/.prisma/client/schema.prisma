generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MIGRATION

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  title     String
  password  String
  client_id Int
  createdAt DateTime @default(now())
}

model Client {
  id            Int      @id @default(autoincrement())
  client_name   String
  email         String   @unique
  address       String
  industry      String
  phone_number  String
  client_status String   @db.VarChar(2)
  createdAt     DateTime @default(now())
}
