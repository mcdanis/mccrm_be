// migration run = npx prisma migrate dev --name init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MIGRATION

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  title     String
  role      String
  password  String
  client_id Int
  createdAt DateTime @default(now())
}

model Client {
    id  Int @id @default(autoincrement())
    name String
    email String @unique
    address String
    industry String
    phone_number String
    status String @db.VarChar(2)
    createdAt DateTime @default(now())
}

model Campaign {
  id  Int @id @default(autoincrement())
  name String @db.VarChar(50)
  client_id Int
  status String @db.VarChar(2)
  created_by Int
  createdAt DateTime @default(now())
}

model Sub_Campaign {
  id  Int @id @default(autoincrement())
  campaign_id Int
  name String @db.VarChar(50)
  owner Int
  manager Int
  status String @db.VarChar(2)
  client_id Int
  created_by Int
  createdAt DateTime @default(now())
}
model Contact {
  id  Int @id @default(autoincrement())
  sub_campaign_id Int
  first_name String @db.VarChar(20)
  last_name String @db.VarChar(30)
  email String @unique
  country String @db.VarChar(30)
  address String @db.VarChar(255)
  tag String @db.VarChar(10)
  level_priority String @db.VarChar(2)
  source String
  status String @db.VarChar(2)
  result_negotiation String
  createdAt DateTime @default(now())
}

// untuk menyimpan relasi kontak untuk mengetahui kontak ini di buat dari kontak lain kontak apa
model Contact_Parent {
  id Int @id @default(autoincrement())
  parent_contact_id Int
  contact_id Int
  createdAt DateTime @default(now())
}

// menyimpan data customer dari orang/client yang sudah pernah closing
model Customer {
  id Int @id @default(autoincrement())
  contact_id Int
  tag String @db.VarChar(10)
  note String
  createdAt DateTime @default(now())
}
model Contact_Note {
  id  Int @id @default(autoincrement())
  sub_campaign_id Int
  contact_id Int
  note String
  createdAt DateTime @default(now())
}
model Contact_Activity {
  id  Int @id @default(autoincrement())
  contact_id Int
  title String @db.VarChar(50)
  description String
  createdAt DateTime @default(now())
}
model Contact_Bant {
  id  Int @id @default(autoincrement())
  contact_id Int
  lead_type Int
  lead_owner Int
  budget String
  authority String
  need String
  time String
  spesification_project String
  next_step String
  createdAt DateTime @default(now())
}
model Contact_Timeline {
  id  Int @id @default(autoincrement())
  contact_id Int
  sub_campaign_id Int
  title String @db.VarChar(30)
  description String
  createdAt DateTime @default(now())
}
model Campaign_User {
  id  Int @id @default(autoincrement())
  user_id Int
  sub_campaign_id Int
  client_id Int
  createdAt DateTime @default(now())
}